@model Catalogar.Models.ViewModel.RegisterViewModel

<div>
    <form class="d-flex flex-column align-items-center" method="post" action="@Url.Action("Register", "Account")" >
        <div class="row col-md-6 mb-4">
            <div class="">
                <label for="User" class="form-label">Usuário:</label>
                <input type="text" class="form-control" asp-for="Usuario" id="User" placeholder="Digite usuário">
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>
        </div>

        <div class="row col-md-6 mb-4">
            <div class="">
                <label for="Email" class="form-label">E-mail:</label>
                <input type="email" class="form-control" asp-for="Email" id="Email" placeholder="Digite o e-mail">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row col-md-6 mb-4">
            <div class="">
                <label for="Password" class="form-label">Senha:</label>
                <input type="password" class="form-control" asp-for="Senha" id="Password" placeholder="Digite a senha">
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

        </div>

        <div class="row col-md-6 mb-4">
            <div class="">
                <label for="confirmPassword" class="form-label">Confirmar Senha:</label>
                <input type="password" class="form-control" asp-for="ConfirmarSenha" id="confirmPassword" placeholder="Confirme a senha">
                <span asp-validation-for="ConfirmarSenha" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-center m-4">
            <input type="submit" class="btn btn-danger p-2" value="CADASTRAR" />
        </div>
    </form>
</div>

