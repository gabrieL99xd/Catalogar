@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SigninManager;

@if (!SigninManager.IsSignedIn(User))
{
    <ul class="navbar-nav flex-grow-1 justify-content-end">
        <li class="nav-item ">
            <a class="nav-link text-danger fw-bold" asp-area="" asp-controller="Account" asp-action="Login">LOGIN</a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav flex-grow-1 justify-content-end">
        <li class="nav-item">
            <div class="dropdown">
                <button class="btn btn-outline-dark dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Produtos
                </button>
                <ul class="dropdown-menu dropdown-menu-dark">
                    <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Index">Visualizar</a></li>
                    <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Create">Criar</a></li>
                </ul>
            </div>
        </li>
        <li class="nav-item ms-md-5">
            <form method="post">
                <button type="submit" class=" btn-link btn nav-link text-danger fw-bold" asp-area="" asp-controller="Account" asp-action="Logout">LOGOUT</button>
            </form>
        </li>
    </ul>
}